<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_user_post"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/singlepost_linearlayout_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/singlepost_linearlayout_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/singlepost_profilepic_imageview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:srcCompat="@tools:sample/avatars[11]" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/singlepost_sellername_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/sellerprofile_name"
                    android:textColor="#000000"
                    android:textColorHint="#0F0F0F"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/singlepost_time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="post time"
                    android:textColor="#272727"
                    android:textColorHint="#050505"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/singlepost_imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="#D54D6875" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/singlepost_itemname_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="170dp"
                android:hint="Item Name"
                android:textColor="#050000"
                android:textColorHint="#000000"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/singlepost_message_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00FFFFFF"
                android:baselineAlignBottom="true"
                android:clickable="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_mail_outline_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/singlepost_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:hint="Item Description"
            android:inputType="textMultiLine"
            android:textColor="#3F3F3F"
            android:textColorHint="#F8000000" />

    </LinearLayout>
</RelativeLayout>