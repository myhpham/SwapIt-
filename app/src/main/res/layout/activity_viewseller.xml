<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/sellerprofile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/sellerprofile_textView"
        android:textColor="#000000"
        android:textSize="40sp" />

    <View
        android:id="@+id/sellerprofile_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="200dp"
        android:background="#281a41"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/sellerprofile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:paddingLeft="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sellerprofile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="240dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/sellerprofile_name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/sellerprofile_messagebutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="300dp"
        android:background="#80FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sellerprofile_messagebutton"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sellerprofile_sellerPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/sellerprofile_sellerposts"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/sellerprofile_gridview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="440dp"
        android:paddingLeft="15dp" />


</RelativeLayout>