<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/userprofileicon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_profilebutton" />


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/profilepicprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="1000dp"
        android:layout_marginBottom="15dp" />

    <View
        android:id="@+id/userprofile_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/userprofileicon_image"
        android:background="#281a41"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/userprofile_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/userprofile_divider"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/userprofile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userprofile_divider"
        android:layout_marginLeft="-36dp"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@id/userprofileicon_image"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:hint="@string/userprofile_name"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userprofile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userprofile_divider"
        android:layout_marginLeft="-36dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@id/userprofileicon_image"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:hint="@string/userprofile_name"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userprofile_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userprofile_email"
        android:layout_marginLeft="-36dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/userprofileicon_image"
        android:fontFamily="sans-serif-thin"
        android:hint="User Zip"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!--

    <Button
        android:id="@+id/userprofile_savephoto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userprofile_divider"
        android:layout_toRightOf="@id/userprofile_image"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#80FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="SAVE"
        android:textColor="#000000"
        android:textSize="12sp" /> -->

    <Button
        android:id="@+id/userprofile_logout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userprofile_divider"
        android:layout_marginTop="130dp"
        android:layout_toRightOf="@id/userprofile_image"
        android:background="#80FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="LOGOUT"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/userprofile_divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/userprofile_image"
        android:layout_marginTop="25dp"
        android:background="#281a41"
        android:visibility="visible" />

    <GridView
        android:id="@+id/userprofile_gridview"
        android:layout_width="match_parent"
        android:layout_below="@id/userprofile_divider2"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="15dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ic_edit_black_24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:backgroundTint="#97699E" />


</RelativeLayout>